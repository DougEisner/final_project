<section id="products">
  <div class="products-container">
    <h2 class="center">Choose a Product</h2>
    <ul class="collapsible popout" data-collapsible="accordion">
      <% @products.each do |product| %>
        <li class="col s12 m7">
          <div class="card collapsible-header">
            <div class="card-content">
              <h3 class="grey-text text-darken-4"><%= product.title %></h3>
              <h4><%= product.developer %></h4>
              <p class="grey-text hide-on-small-onl"><%= product.summary %>Provides manually curated data on exposure information, chemical-gene-phenotype-disease relationships and tools to analyze these integrated data sets.</p>
            </div>
            <a class="btn-flat waves-effect waves-light col s12">Choose</a>
          </div>
        </li>
      <% end %>
    </ul>
  </div>

  <p id="notice"><%= notice %></p>


  <table>
    <thead>
      <tr>
        <th>Title</th>
        <th>Developer</th>
        <th>Email</th>
        <th>Institution</th>
        <th>Category</th>
        <th>Price</th>
        <th colspan="3"></th>
      </tr>
    </thead>

    <tbody>
      <% @products.each do |product| %>
      <tr>
        <td><%= product.title %></td>
        <td><%= product.developer %></td>
        <td><%= product.email %></td>
        <td><%= product.institution %></td>
        <td><%= product.category %></td>
        <td><%= product.summary %></td>
        <td><%= product.price %></td>

      <% if is_admin? %>
          <td><%= link_to 'Show', product %></td>
          <td><%= link_to 'Edit', edit_product_path(product) %></td>
          <td><%= link_to 'Destroy', product, method: :delete, data: { confirm: 'Are you sure?' }
           %></td>
      <% end %>

      </tr>
      <% end %>
    </tbody>
  </table>

  <br>

  <%= link_to 'New Product', new_product_path %>

</section>

<section id="details-page">
  <p id="notice"><%= notice %></p>
  <div class="container">
    <div class="summary-wrapper row">
      <div class="title col s12">
        <h2><%= @product.institution %></h2>
        <h3><%= @product.title %></h3>
      </div>
      <div class="details-wrapper row">
        <div class="summary col m8 s12">
          <p><%= @product.summary %></p>
          <p><strong>Developer:</strong> <%= @product.developer %></p>
        </div>
        <div class="details col m4 s12">
          <p><strong>Category:</strong> <%= @product.category %></p>
          <p><strong>Institution:</strong> <%= @product.institution %></p>
          <p><strong>Email:</strong> <%= @product.email %></p>
        </div>
      </div>
    </div>

    <div class="description row">
      <h4>Product Description</h4>
      <div class="detailed-description col s12 m8">
        <p><%= @product.detailed_description %></p>
      </div>
      <div class="images col s12 m4">
        <img src="<%= @product.image.url(:medium) %>" alt="<%= @product.title %>" />
      </div>
    </div>
  </div>

  <div class="pricing-wrapper">
    <div class="pricing container">
      <h2>Select a License</h2>
      <div class="row">
        <div class="tier-1">
          <div class="price-card white hoverable">
            <h4>100 Employees</h4>
            <h3>$3,000</h3>
            <div class="card-content grey-text center">
              <p class="valign-wrapper"><i class="material-icons">done</i>Annual site license</p>
              <p class="valign-wrapper"><i class="material-icons">done</i>Unlimited downloads</p>
              <p class="valign-wrapper"><i class="material-icons">done</i>Internal use only</p>
            </div>
            <div class="center card-action">
              <%= link_to 'Purchase License', { :controller => 'licenses', :action => 'new', :product_id => @product, :price => '3000' }, class: "btn-flat waves-effect waves-light" %>
            </div>
          </div>
        </div>
        <div class="tier-2">
          <div class="price-card white hoverable">
            <h4> < 250 Employee</h4>
            <h3>$5,000</h3>
            <div class="card-content grey-text center">
              <p class="valign-wrapper"><i class="material-icons">done</i>Annual site license</p>
              <p class="valign-wrapper"><i class="material-icons">done</i>Unlimited downloads</p>
              <p class="valign-wrapper"><i class="material-icons">done</i>Internal use only</p>
            </div>
            <div class="center card-action">
              <%= link_to 'Purchase License', { :controller => 'licenses', :action => 'new', :product_id => @product, :price => '5000.55' }, class: "btn-flat waves-effect waves-light" %>
            </div>
          </div>
        </div>
        <div class="tier-3">
          <div class="price-card white hoverable">
            <h4> > 250 Employees</h4>
            <h3>$10,000</h3>
            <div class="card-content grey-text center">
              <p class="valign-wrapper"><i class="material-icons">done</i>Annual site license</p>
              <p class="valign-wrapper"><i class="material-icons">done</i>Unlimited downloads</p>
              <p class="valign-wrapper"><i class="material-icons">done</i>Internal use only</p>
            </div>
            <div class="center card-action">
              <%= link_to 'Purchase License', { :controller => 'licenses', :action => 'new', :product_id => @product, :price => '10000' }, class: "btn-flat waves-effect waves-light" %>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</section>

<section id="details-page" class="container">
  <p id="notice"><%= notice %></p>
  <div class="summary row">
    <div class="title col s12 m9">
      <h2><%= @product.institution %></h2>
      <h3><%= @product.title %></h3>
      <p><%= @product.summary %></p>
    </div>
    <div class="details col s12 m3">
      <p><strong>Category:</strong> <%= @product.category %></p>
      <p><strong>Institution:</strong> <%= @product.institution %></p>
      <p><strong>Email:</strong> <%= @product.email %></p>
      <p><strong>Developer:</strong> <%= @product.developer %></p>
    </div>
  </div>

  <div class="description row">
    <div class="detailed-description col s12 m8">
      <%= @product.detailed_description %>
    </div>
    <div class="images col s12 m4">
      <img src="<%= @product.image.url(:medium) %>" alt="<%= @product.title %>" />
    </div>
  </div>

  <div class="pricing row">
    <div class="pricing-wrapper">
      <div class="row">
        <div class="col s12 m6 l4 tier-1">
          <div class="card white hoverable">
            <h4 class="center grey-text">100 Employees</h4>
            <div class="card-content grey-text center">
              <h5 class="grey-text text-darken-1">Features</h5>
              <p class="valign-wrapper"><i class="material-icons">done</i>Annual site license</p>
              <p class="valign-wrapper"><i class="material-icons">done</i>Unlimited downloads</p>
              <p class="valign-wrapper"><i class="material-icons">done</i>Internal use only</p>
              <h3>$3,000</h3>
            </div>
            <div class="center card-action">
              <%= link_to 'Purchase License', license_template_path, class: "btn waves-effect waves-light white-text medium-blue" %>
            </div>
          </div>
        </div>
        <div class="col s12 m6 l4 tier-2">
          <div class="card white hoverable">
            <h4 class="center  grey-text"> < 250 Employee</h4>
            <div class="card-content grey-text center">
              <h5 class="grey-text text-darken-1">Features</h5>
              <p class="valign-wrapper"><i class="material-icons">done</i>Annual site license</p>
              <p class="valign-wrapper"><i class="material-icons">done</i>Unlimited downloads</p>
              <p class="valign-wrapper"><i class="material-icons">done</i>Internal use only</p>
              <h3 >$5,000</h3>
            </div>
            <div class="center card-action">
              <%= link_to 'Purchase License', license_template_path, class: "btn waves-effect waves-light white-text gold" %>
            </div>
          </div>
        </div>
        <div class="col s12 m6 l4 tier-3">
          <div class="card white hoverable">
            <h4 class="center grey-text"> > 250 Employees</h4>
            <div class="card-content grey-text center">
              <h5 class="grey-text text-darken-1">Features</h5>
              <p class="valign-wrapper"><i class="material-icons">done</i>Annual site license</p>
              <p class="valign-wrapper"><i class="material-icons">done</i>Unlimited downloads</p>
              <p class="valign-wrapper"><i class="material-icons">done</i>Internal use only</p>
              <h3>$10,000</h3>
            </div>
            <div class="center card-action">
              <%= link_to 'Purchase License', { :controller => 'licenses', :action => 'new', :product_id => @product }, class: "btn waves-effect waves-light white-text rusted-red" %>
            </div>
          </div>
        </div>
      </div>
    </div>
    <%= @product.price %>
  </div>

</section>


<%= link_to 'Edit', edit_product_path(@product) %> |

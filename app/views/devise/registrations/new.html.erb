<section id="registration" class="row">
  <div class="registration-wrapper col s10 offset-s1 m6 offset-m3 l4 offset-l4">
    <% header "Register" %>

    <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
    <%= devise_error_messages! %>

    <h3>Register</h3>
    <div class="form-group input-field user-role center">
      <%= radio_button_tag(:role, "business", false, class: "with-gap") %>
      <%= label_tag(:role_business, "Business") %>
      <%= radio_button_tag(:role, "academic", false, class: "with-gap") %>
      <%= label_tag(:role_academic, "Academic") %>
      <%= radio_button_tag(:role, "other", true, class: "with-gap") %>
      <%= label_tag(:role_other, "Unaffiliated") %>
    </div>

    <div class="form-group input-field">
      <label for="user_name">Name</label>
      <%= f.text_field :name, class: 'form-control' %>
    </div>

    <div class="form-group input-field">
      <label for="user_email">Email</label>
      <%= f.email_field :email, class: 'form-control' %>
    </div>


    <div class="form-group input-field hide">
      <label for="user_contact_phone">Phone</label>
      <%= f.text_field :contact_phone, class: 'form-control'%>
    </div>

    <div class="form-group input-field hide">
      <label for="user_organization">Organization</label>
      <%= f.text_field :organization, class: 'form-control'%>
    </div>

    <div class="form-group input-field hide" >
      <%= f.select :entity_size, User::ENTITY, {}, class: 'form-control' %>
    </div>

    <div class="form-group input-field">
      <%= f.select :research_area, User::RESEARCHAREA, {}, class: 'form-control' %>
    </div>

    <div class="form-group input-field">
      <label for="user_password"></label>
      <%= f.password_field :password, autocomplete: "off", class: 'form-control estimate-password', placeholder: 'Password'  %>
      <% if @validatable %>
      <span class="help-block"><%= @minimum_password_length %> characters minimum</span>
      <% end %>
    </div>

    <div class="form-group input-field">
      <label for="user_password_confirmation"></label>
      <%= f.password_field :password_confirmation, autocomplete: "off",
      class: 'form-control estimate-password', placeholder: 'Password Confirmation'  %>
    </div>

    <%= f.submit "Sign up", class: 'btn btn-primary' %>
    <% end %>

  </div>
  <div class="registration-footer center col s10 offset-s1 m8 offset-m2 l4 offset-l4">
    <%= render "devise/shared/links" %>
  </div>

</section>

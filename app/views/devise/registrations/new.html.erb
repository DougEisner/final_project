<section id="registration" class="row">
  <div class="registration-wrapper col s10 offset-s1 l6 offset-l3">
    <% header "Register" %>

    <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
    <%= devise_error_messages! %>

    <h3>Register</h3>
    <div class="form-group">
      <%= f.text_field :name, class: 'form-control', placeholder: 'Name' %>
    </div>

    <div class="form-group">
      <%= f.email_field :email, class: 'form-control', placeholder: 'Contact Email'  %>
    </div>

    <div class="user-role">
      <%= radio_button_tag(:role, "business") %>
      <%= label_tag(:role_business, "Business") %>
      <%= radio_button_tag(:role, "academic") %>
      <%= label_tag(:role_academic, "Academic") %>
      <%= radio_button_tag(:role, "other") %>
      <%= label_tag(:role_other, "Unaffiliated") %>
    </div>


    <% if params[:role] == 'business'%>

    <div class="form-group">
      <%= f.text_field :contact_phone, class: 'form-control', placeholder: 'Contact Phone'  %>
    </div>

    <div class="form-group">
      <%= f.text_field :organization, class: 'form-control', placeholder: 'Company'  %>
    </div>

    <div class="form-group">
      <%= f.select :entity_size, User::ENTITY %>
    </div>

    <% else %>
    <div class="form-group">
      <%= f.text_field :organization, class: 'form-control', placeholder: 'University'  %>
    </div>
    <% end %>

    <div class="form-group">
      <%= f.select :research_area, User::RESEARCHAREA %>
    </div>

    <div class="form-group">
      <%= f.password_field :password, autocomplete: "off", class: 'form-control estimate-password', placeholder: 'Password'  %>
      <% if @validatable %>
      <span class="help-block"><%= @minimum_password_length %> characters minimum</span>
      <% end %>
    </div>

    <div class="form-group">
      <%= f.password_field :password_confirmation, autocomplete: "off",
      class: 'form-control estimate-password', placeholder: 'Password Confirmation'  %>
    </div>

    <%= f.submit "Sign up", class: 'btn btn-primary' %>
    <% end %>

  </div>

  <%= render "devise/shared/links" %>

</section>
